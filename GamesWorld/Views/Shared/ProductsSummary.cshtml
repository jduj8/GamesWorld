@model Product

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail" style="background-color:lavender;">
        <img src="@Model.ImageUrl" alt="" />
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                @Model.Game.Name
            </h3>
        </div>
        <div class="addToCart text-right">
            <p class="button">
                <a class="btn btn-success" id="cartButton"
                   asp-controller="Cart"
                   asp-action="AddToCart"
                   asp-route-productID="@Model.ProductID">
                    Add to cart
                </a>
            </p>
        </div>
    </div>
</div>
