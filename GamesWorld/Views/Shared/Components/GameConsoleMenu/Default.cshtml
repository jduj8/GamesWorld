<li class="dropdown">
    <a asp-controller="Product"
       asp-action="Index"
       class="dropdown-toggle" data-toggle="dropdown">Games<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var console in Model)
        {
            <li>
                <a asp-controller="Product" asp-action="List"
                   asp-route-console="@console.GameConsoleName">@console.GameConsoleName</a>
            </li>
        }
        <li class="divider"></li>
        <li>
            <a asp-controller="Product" asp-action="List" asp-route-category="">View all games</a>
        </li>
    </ul>
</li>
